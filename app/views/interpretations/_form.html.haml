= form_for @interpretation do |f|
  - if @interpretation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@interpretation.errors.count, "error")} prohibited this interpretation from being saved:"
      %ul
        - @interpretation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :card_code
    = f.text_field :card_code
  .actions
    = f.submit 'Save'
