    Interpretation.create!( :card_code => 'strength', :text => 'Силовая борьба. Сопротивление давлению. Внутреннее напряжение. Ролевое соперничество.' )
    Interpretation.create!( :card_code => 'hermit', :text => 'Рефлексия, интроверсия. Поиски истины внутри себя. Одиночество. Погружённость в себя.' )
